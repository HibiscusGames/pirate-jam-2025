# Normalize EOL for all files that Git considers text files.
* text=auto eol=lf

# Image project files
*.psd filter=lfs diff=lfs merge=lfs -text
*.xdf filter=lfs diff=lfs merge=lfs -text
*.kra filter=lfs diff=lfs merge=lfs -text

# Image files
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.tiff filter=lfs diff=lfs merge=lfs -text
*.tga filter=lfs diff=lfs merge=lfs -text

# Audio Project Files
*.aup3 filter=lfs diff=lfs merge=lfs -text
*.sesx filter=lfs diff=lfs merge=lfs -text
*.flp  filter=lfs diff=lfs merge=lfs -text
*.rpp  filter=lfs diff=lfs merge=lfs -text
*.als  filter=lfs diff=lfs merge=lfs -text

# Game Audio Assets
*.wav  filter=lfs diff=lfs merge=lfs -text
*.ogg  filter=lfs diff=lfs merge=lfs -text
*.mp3  filter=lfs diff=lfs merge=lfs -text

# Support Audio Files
*.aif  filter=lfs diff=lfs merge=lfs -text
*.aiff filter=lfs diff=lfs merge=lfs -text
*.mid  filter=lfs diff=lfs merge=lfs -text
*.midi filter=lfs diff=lfs merge=lfs -text